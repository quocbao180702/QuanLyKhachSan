<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatPhong">

    <RadioButton
        android:id="@+id/radDon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="31dp"
        android:text="Phòng đơn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radDoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="121dp"
        android:text="Phòng đôi"
        app:layout_constraintEnd_toEndOf="@+id/txtTen"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="11dp"
        android:text="Tên Khách Hàng"
        app:layout_constraintBottom_toTopOf="@+id/txtTen"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtTen"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtSdt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radDoi" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="196dp"
        android:text="Số điện thoại"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtSdt"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="226dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="227dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtNgayO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="15dp"
        android:text="Địa chỉ"
        app:layout_constraintBottom_toTopOf="@+id/txtDiaChi"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtDiaChi"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/datNgayDat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSdt" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="34dp"
        android:text="Ngày đặt"
        app:layout_constraintBaseline_toBaselineOf="@+id/datNgayDat"
        app:layout_constraintEnd_toStartOf="@+id/datNgayDat"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/datNgayDat"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="306dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="306dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/radDon" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:text="Ngày đến ở"
        app:layout_constraintBaseline_toBaselineOf="@+id/datNgayDenO"
        app:layout_constraintEnd_toStartOf="@+id/datNgayDenO"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/datNgayDenO"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="246dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="248dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="33dp"
        android:text="Số ngày ở"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtNgayO"
        app:layout_constraintEnd_toStartOf="@+id/txtNgayO"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtNgayO"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnDat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/datNgayDenO" />

    <Button
        android:id="@+id/btnDat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="68dp"
        android:text="Đặt Phòng"
        app:layout_constraintStart_toStartOf="@+id/txtNgayO"
        app:layout_constraintTop_toBottomOf="@+id/datNgayDenO" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="78dp"
        android:text="Tổng tiền"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtTong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnDat" />

    <EditText
        android:id="@+id/txtTong"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="78dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/txtNgayO" />

</androidx.constraintlayout.widget.ConstraintLayout>