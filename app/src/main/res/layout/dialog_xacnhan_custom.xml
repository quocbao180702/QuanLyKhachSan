<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="9">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ Tên"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtHoTenHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"


            android:text="TextView"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày Đặt"
            android:textSize="20dp" />

        <TextView
            android:textSize="20dp"

            android:id="@+id/txtNgayDatHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20px"
        android:weightSum="5"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày Đến"
            android:textSize="20dp" />

        <TextView
            android:textSize="20dp"

            android:id="@+id/txtNgayDenHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20px"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Ngày Ở"

            android:textSize="20dp" />

        <TextView
            android:textSize="20dp"
            android:id="@+id/txtSoNgayOHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20px"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại"

            android:textSize="20dp" />

        <TextView
            android:textSize="20dp"
            android:id="@+id/txtLoaiPhongHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20px"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn Giá"
            android:textSize="20dp" />

        <TextView
            android:textSize="20dp"
            android:id="@+id/txtDonGiaHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20px"
        android:weightSum="3"
        android:layout_marginBottom="20px"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng Tiền"

            android:textSize="20dp" />

        <TextView
            android:textSize="20dp"
            android:id="@+id/txtTongTienHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:text="TextView" />
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDongY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đồng Ý" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy" />

    </LinearLayout>


</LinearLayout>